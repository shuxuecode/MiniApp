page {
  font-family: Arial, Helvetica, sans-serif;
  /* font-family: 微软雅黑; */
}

.swiper {
  height: 400rpx;
  /* width: 100%; */
}

.swiper image {
  height: 100%;
  width: 100%;
}

.zsx {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 20px;
}

.zsx .home-page {
  width: 50%;
  padding: 10px 0;
}

.zsx .cart {
  width: 25%;
  background-color: #09bb07;
  color: #fff;
  border-left: 1px solid #d9d9d9;
  border-right: 1px solid #d9d9d9;
  /* padding: 10px 0; */
  line-height:50px;

}

.zsx .bay-now {
  width: 25%;
  background-color: #00b2ec;
  color: #fff;
  /* padding: 10px 0; */
  line-height:50px;

}

