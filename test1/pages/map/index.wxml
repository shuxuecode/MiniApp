<swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">
  <block wx:for="{{movies}}" wx:for-index="index">
    <swiper-item>
      <image src="{{item.url}}" class="slide-image" mode="aspectFill" />
    </swiper-item>
  </block>
</swiper>

<view>房屋介绍</view>


<map id="myMap" style="width: 100%; height: 300px;" show-location scale="15" markers="{{markers}}" bindmarkertap="markertap" controls="{{controls}}"></map>

