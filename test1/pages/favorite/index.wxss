/* pages/house/index.wxss */

page {
  font-family: Microsoft YaHei;
}


/* 其它样式 */

swiper {
  height: 250px;
}

.view-1 {
  display: flex;
}

.view-img-1 {
  float: left;
  width: 35%;
}

.view-detail {
  float: left;
  width: 65%;
  position: relative;
  border-top: 1px solid #eee;
}

.view-detail .view-text {
  font-size: 16px;
  font-weight: bold;
  margin-left: 10px;
}

.jiage {
  position: absolute;
  bottom: 0px;
  color: #ff5000;
  font-size: 16px;
  margin-left: 10px;
  margin-bottom: 12px;
}

.price-icon {
  float: left;
  font-size: 12px;
  position: absolute;
  bottom: 0;
  font-family: arial;
  padding-right: 2px;
}

.font-num {
  float: left;
  margin-left: 8px;
}

.btm-view {
  height: 50px;
  line-height: 50px;
  color: #a4a9b0;
  font-size: 12px;
  text-align: center;
  background-color: #e7e7e7;
}
