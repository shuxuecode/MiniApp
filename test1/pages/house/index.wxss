/* pages/house/index.wxss */

page {
  padding: 170rpx 0 50px;
  font-family: Microsoft YaHei;
}

/* 搜索框 开始 */

.search-area {
  width: 100%;
  top: 0;
  position: fixed;
  height: 80rpx;
  z-index: 1;
  background: #f6f6f6;
  padding: 5rpx 0;
}

.search-txt {
  box-sizing: border-box;
  width: 98%;
  height: 70rpx;
  line-height: 70rpx;
  margin: 0 auto;
  text-align: center;
  border-radius: 10rpx;
  border: 1px solid #eee;
}

.search-btn {
  position: absolute;
  z-index: 1;
  top: 0;
  right: 0;
  height: 80rpx;
  width: 120rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  border-bottom-left-radius: 0;
  border-top-left-radius: 0;
}

/* 搜索框 结束 */

/* 选项卡  */

.tabTit {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: solid 1px #eee;
  position: fixed;
  /* top: 0; */
  top: 80rpx;
  width: 750rpx;
  z-index: 1;
  background: #f5f5f5;
}

/* 选项卡——箭头 */

.tabTit image {
  width: 26rpx;
  height: 26rpx;
  vertical-align: middle;
  margin-left: 5px;
}

/* 点击后状态 */

.tabTit .active {
  color: #e64340;
  background: #fff;
}

.tabTit .active image {
  transform: rotate(180deg);
  background: none;
}

/* 筛选项样式 */

.tabLayer {
  box-shadow: 0 5px 5px rgba(0, 0, 0, 0.15);
  width: 750rpx;
  overflow: hidden;
  position: fixed;
  top: 170rpx;
  z-index: 1;
  background: #fff;
  padding-bottom: 26rpx;
  border-bottom: solid 1px #eee;
}

.tabLayer text {
  width: 210rpx;
  height: 60rpx;
  line-height: 60rpx;
  float: left;
  border: solid 1px #eee;
  margin: 20rpx 0 0 26rpx;
}

.tabLayer .active {
  color: #e64340;
  border-color: #e64340;
}

/* 其它样式 */

swiper {
  height: 250px;
}

.view-1 {
