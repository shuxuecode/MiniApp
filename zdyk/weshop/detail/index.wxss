/* index.wxss */

page {
  font-family: Microsoft YaHei;
}

.backCls {
  width: 100%;
  text-align: center;
  font-size: 14px;
  padding: 8px 0;
}

.view-1 {
  border-top: 1px solid #ccc;
  padding: 15px;
}

.v-price-a {
  color: #f94f21;
  flex-direction: row;
  display: flex;
  margin-top:5px; 
}

.v-price-icon {
  font-size: 16px;
  padding-top: 4px;
}

.v-price-num {
  margin-left: 5px;
}

.zsx {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 20px;
}

.zsx .home-page {
  width: 20%;
  padding: 10px 0;
}

.zsx .cart {
  width: 40%;
  background-color: #FEAC00;
  color: #ffffff;
  border-left: 1px solid #d9d9d9;
  border-right: 1px solid #d9d9d9;
  padding: 10px 0;
}

.zsx .bay-now {
  width: 40%;
  background-color: #FF6000;
  color: #ffffff;
  padding: 10px 0;
}
