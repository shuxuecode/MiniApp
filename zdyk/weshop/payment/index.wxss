/* index.wxss */

page {
  font-family: Microsoft YaHei;
}

.backCls {
  width: 100%;
  text-align: center;
  font-size: 16px;
  padding: 8px 0;
  border-bottom: 1rpx solid #bcbcbc;
  background-color: #f9f9f9;
}

/*收货 start*/

.v-a {
  padding: 15px;
}

.v-a-1 {
  line-height: 50px;
}

.v-a-1 .phone-num {
  float: right;
}

.v-b-1 {
  font-size: 16px;
}

.v-b-1-3{
  float: right;
  font-size: 14px;
  color:#AAAAAA;
}

/*收货 end*/

/*配送  start*/

.v-d {
  border-top: 1px solid #f0f0f0;
  border-bottom: 1px solid #f0f0f0;
  padding: 15px;
}

.v-d image {
  width: 20px;
  height: 27px;
  float: right;
}

.v-d-1 {
  display: inline-block;
}

.v-d-2 {
  float: right;
  margin-right: 20px;
}

/*配送  end*/

/*留言 start*/

.v-e {
  padding: 15px;
}

.v-msg {
  width: 100%;
  border: 1px solid #ccc;
  margin: auto;
}

/*留言 end*/

/*商品展示 start*/

.view-1 {
  display: flex;
}

.view-img-1 {
  float: left;
  width: 35%;
}

.view-detail {
  float: left;
  width: 65%;
  position: relative;
  border-top: 1px solid #eee;
}

.view-detail .view-text {
  font-size: 16px;
  font-weight: bold;
  margin-left: 10px;
}

.jiage {
  position: absolute;
  bottom: 0px;
  color: #ff5000;
  font-size: 16px;
  margin-left: 10px;
  margin-bottom: 12px;
}

.price-icon {
  float: left;
  font-size: 12px;
  position: absolute;
  bottom: 0;
  font-family: arial;
  padding-right: 2px;
}

.font-num {
  float: left;
  margin-left: 8px;
}

/*商品展示 end*/

/*底部按钮*/

.view-btm {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 20px;
}

.view-btm view {
  padding: 10px 0;
}

.view-btm .view-btm-b {
  width: 60%;
  font-size: 16px;
}

.view-btm .view-btm-b .v-b {
  color: #ff5000;
}

.view-btm .view-btm-c {
  width: 40%;
  background-color: #fc5600;
  color: #fff;
}
