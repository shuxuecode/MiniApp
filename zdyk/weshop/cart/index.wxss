/* index.wxss */

page {
  font-family: Microsoft YaHei;
}

.checkbox{
  display: flex;
}

.view-checkbox{
  float: left;
  width: 10%;
  text-align: right;
}

.view-checkbox checkbox{
  height: 100px;
  line-height: 100px;
}

.view-1 {
  display: flex;
  width: 90%;
}



.view-img-1 {
  float: left;
  width: 30%;
  text-align: center;
}

.view-detail {
  float: left;
  width: 68%;
  position: relative;
  border-top:1px solid #eeeeee;
}

.view-detail .view-text {
  font-size: 16px;
  font-weight: bold;
  margin-left: 10px;
}

.jiage {
  position: absolute;
  bottom: 0px;
  color: #FF5000;
  font-size: 16px;
  margin-left: 10px;
  margin-bottom: 12px;
}

.price-icon {
  float: left;
  font-size: 12px;
  position: absolute;
  bottom: 0;
  font-family: arial;
  padding-right: 2px;
  
}

.font-num {
  float: left;
  margin-left:8px;
}

.view-btm {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  border: 1px solid #d9d9d9;
  background-color: #fafafa;
  flex-direction: row;
  display: flex;
  text-align: center;
  font-size: 20px;
}

.view-btm view {
  padding: 10px 0;
}

.view-btm .view-btm-a  {
  width: 25%;
}

.view-btm .view-btm-b  {
  width: 45%;
  font-size:16px;
}

.view-btm .view-btm-b .v-b {
  color: #FF5000;
}

.view-btm .view-btm-c  {
  width: 30%;
  background-color: #FC5600;
  color: #ffffff;
}

