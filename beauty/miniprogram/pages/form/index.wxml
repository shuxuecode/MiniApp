<view class="page" data-weui-theme="{{theme}}">
	<view class="weui-form">
		<view class="weui-form__text-area">
			<h2 class="weui-form__title">用户信息</h2>
			<!-- <view class="weui-form__desc">提示</view> -->
		</view>
		<view class="weui-form__control-area">
			<form bindsubmit="formSubmit" bindreset="reset">
				<view class="weui-cells__group weui-cells__group_form">
					<!-- <view class="weui-cells__title">tip</view> -->
					<view class="weui-cells weui-cells_form">
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd">
								<label class="weui-label">姓名</label>
							</view>
							<view class="weui-cell__bd">
								<input class="weui-input" placeholder="填写姓名" placeholder-class="weui-input__placeholder" 
								name="userName" value="{{userName}}" />
							</view>
						</view>
						<!--  -->
						<!-- <view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd">
								<label class="weui-label">昵称</label>
							</view>
							<view class="weui-cell__bd">
								<input class="weui-input" placeholder="填写昵称" placeholder-class="weui-input__placeholder" />
							</view>
						</view> -->
						<!--  -->
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd">
								<label class="weui-label">联系电话</label>
							</view>
							<view class="weui-cell__bd">
								<input class="weui-input" placeholder="填写电话号码" type="number"
									placeholder-class="weui-input__placeholder" 
									name="mobile" value="{{mobile}}" />
							</view>
						</view>
						<!--  -->
						<view class="weui-cell weui-cell_active">
							<view class="weui-cell__hd">
								<label class="weui-label">其他信息</label>
							</view>
							<!-- <view class="weui-cell__bd">
								<textarea name="content" auto-height placeholder="输入内容" placeholder-class="weui-input__placeholder"
									maxlength="-1"></textarea>
							</view> -->

						</view>
						<!--  -->
						<view class="weui-cells__group weui-cells__group_form">

							<!-- <view class="weui-cell__hd">
								<label class="weui-label">其他信息</label>
							</view> -->
							<!-- <view class="weui-cells__title">其他信息</view> -->
							<view class="weui-cells weui-cells_form">
								<view class="weui-cell ">
									<view class="weui-cell__bd">
										<textarea class="weui-textarea" placeholder="输入内容" rows="3" maxlength="-1"
										name="remark" value="{{remark}}"></textarea>
										<!-- <view class="weui-textarea-counter"><text>0</text>/200</view> -->
									</view>
								</view>
							</view>
						</view>
					</view>

					<!--  -->

					<view class="weui-form__tips-area">
						<view class="weui-form__tips">
							表单页提示，居中对齐
						</view>
					</view>
					<!--  -->

					<view class="weui-form__opr-area">
						<button class="weui-btn weui-btn_primary" form-type="submit">保存</button>
						<button class="weui-btn weui-btn_default" bindtap="goBack">返回</button>
						<!-- <button form-type="reset">清空</button> -->
					</view>

				</view>
			</form>
		</view>
		<!-- <view class="weui-form__tips-area">
			<view class="weui-form__tips">
				表单页提示，居中对齐
			</view>
		</view>
		<view class="weui-form__opr-area">
			<a class="weui-btn weui-btn_primary">确定</a>
		</view> -->

		<view class="weui-form__extra-area">
			<view class="weui-footer">
				<view class="weui-footer__links">
					<a href="javascript:" class="weui-footer__link">底部链接文本</a>
				</view>
				<view class="weui-footer__text">Copyright © 2008-2019 weui.io</view>
			</view>
		</view>
	</view>
</view>